{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "!.next/cache/**", "dist/**"],
      "env": [
        "NEXT_PUBLIC_STACK_PROJECT_ID",
        "NEXT_PUBLIC_STACK_PUBLISHABLE_CLIENT_KEY",
        "STACK_SECRET_SERVER_KEY",
        "DATABASE_URL",
        "DATABASE_URL_UNPOOLED"
      ]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "lint": {
      "dependsOn": ["^build"]
    }
  }
}
